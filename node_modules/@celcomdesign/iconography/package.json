{
  "name": "@celcomdesign/iconography",
  "description": "Prisma 2 Iconography",
  "homepage": "https://celcomdesign.gitlab.io/system/iconography/",
  "author": "Celcom Design",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/celcomdesign/system/iconography.git"
  },
  "bugs": {
    "url": "https://gitlab.com/celcomdesign/system/iconography/issues"
  },
  "scripts": {
    "copy:icon": "copyfiles -f '~/Creative Cloud Files/Prisma 2.0 Icons/SVG/Icon/*.svg' src/icons/icon",
    "copy:color": "copyfiles -f '~/Creative Cloud Files/Prisma 2.0 Icons/SVG/Icon Color/*.svg' src/icons/color",
    "copy:expressive": "copyfiles -f '~/Creative Cloud Files/Prisma 2.0 Icons/SVG/Expressive/*.svg' src/icons/expressive",
    "copy:badge": "copyfiles -f '~/Creative Cloud Files/Prisma 2.0 Icons/SVG/Badge/*.svg' src/icons/badge",
    "copy:logo": "copyfiles -f '~/Creative Cloud Files/Prisma 2.0 Icons/SVG/Logo/*.svg' src/icons/logo",
    "copy": "npm-run-all copy:*",
    "rename:case": "renamer -p case --case kebab 'src/icons/**/*'",
    "rename:icon": "renamer --find '/-2-g/g' --replace '-2g' 'src/**/*' && renamer --find '/-3-g/g' --replace '-3g' 'src/**/*' && renamer --find '/-4-g/g' --replace '-4g' 'src/**/*' && renamer --find '/-4-k/g' --replace '-4k' 'src/**/*' && renamer --find '/-5-g/g' --replace '-5g' 'src/**/*' && renamer --find icon- 'src/icons/**/*'",
    "rename:color": "renamer --find '/colour-/g' --replace 'color-' 'src/icons/**/*'",
    "rename": "npm-run-all rename:*",
    "svgo:icon": "svgo -f 'src/icons/icon' -o svg/icon --config=svgo.yml",
    "svgo:color": "svgo -f 'src/icons/color' -o svg/color --config=svgo.color.yml",
    "svgo:expressive": "svgo -f 'src/icons/expressive' -o svg/expressive --config=svgo.color.yml",
    "svgo:badge": "svgo -f 'src/icons/badge' -o svg/badge --config=svgo.color.yml",
    "svgo:logo": "svgo -f 'src/icons/logo' -o svg/logo --config=svgo.color.yml",
    "svgo": "npm-run-all svgo:*",
    "svgtofont:icon": "svgtofont --sources svg/icon --output font/icon --fontName prisma-icons",
    "svgtofont:color": "svgtofont --sources svg/color --output font/color --fontName prisma-icons-color",
    "svgtofont:expressive": "svgtofont --sources svg/expressive --output font/expressive --fontName prisma-icons-expressive",
    "svgtofont": "npm-run-all svgtofont:*",
    "sprite:icon": "svg-sprite --symbol --symbol-dest . --symbol-sprite sprite/prisma-icons.symbol.svg svg/icon/*.svg",
    "sprite:color": "svg-sprite --symbol --symbol-dest . --symbol-sprite sprite/prisma-icons-color.symbol.svg svg/color/*.svg",
    "sprite:expressive": "svg-sprite --symbol --symbol-dest . --symbol-sprite sprite/prisma-icons-expressive.symbol.svg svg/expressive/*.svg",
    "sprite": "npm-run-all sprite:*",
    "prepare": "run-s copy rename svgo cleanup:icon",
    "publish:icon": "run-s copy:icon rename:* svgo:icon",
    "publish:color": "run-s copy:color rename:* svgo:color",
    "publish:expressive": "run-s copy:expressive rename:* svgo:expressive",
    "publish:badge": "run-s copy:badge rename:* svgo:badge",
    "publish:logo": "run-s copy:logo rename:* svgo:logo",
    "publish": "run-s cleanup copy rename svgo sprite cleanup:icon",
    "cleanup:icon": "rm -rf src/icons/",
    "cleanup:svg": "rm -rf svg/",
    "cleanup:sprite": "rm -rf sprite/",
    "cleanup:font": "rm -rf font/",
    "cleanup:archive": "rm -rf archive/",
    "cleanup": "npm-run-all cleanup:*",
    "purge": "rm -rf svgo/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@twbs/svg-sprite": "^2.0.0",
    "copyfiles": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "renamer": "^2.0.1",
    "renamer-case": "^1.0.0",
    "svgo": "^1.3.2",
    "svgtofont": "^3.12.0"
  },
  "svgtofont": {
    "website": {
      "title": "Prisma Icons",
      "logo": "./svgo/icon/placeholder.svg",
      "version": "1.0.0",
      "template": "./src/templates/index.ejs"
    },
    "outSVGReact": false,
    "outSVGPath": false
  },
  "files": [
    "sprite/*.svg",
    "svg/**/*.svg"
  ],
  "version": "2.0.3"
}
